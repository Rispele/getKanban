@model Core.Dtos.AdminPanelDaysDto

<div>
    <p>Команда: @Model.TeamName</p>
    <img src="/images/edit_button.png">

    @foreach (var day in Model.Days)
    {
        @if (day.Status == "Finished")
        {
            <p class="finished">День @day.Number</p>
        }

        @if (day.Status == "InProcess")
        {
            <img src="/images/restart_button.png">
            <p class="inProcess">День @day.Number</p>
            <img src="/images/edit_button.png">
        }

        @if (day.Status == "NotStartedYet")
        {
            <p class="notStartedYet">День @day.Number</p>
        }
    }

    <button class="back-button">Назад</button>
</div>

